{% extends template('page-layout-main') %}

{% define data = {
    form: _view.form,
    
    title: 'customer.forgotten-password.title' | trans
} %}

{% block breadcrumbs %}
{% endblock %}

{% block content %}
    <div class="customer-account">
        <div class="customer-account__form-width">
            <p class="customer-account__content-text">{{ 'customer.forgotten-password.description' | trans }}</p>
            {% include molecule('form') with {
                data: {
                    form: data.form,
                    submit: {
                        enable: true,
                        class: 'button button--black'
                    },
                    cancel: {
                        enable: true,
                        url: url('login'),
                        text: 'general.back.button' | trans,
                        class: 'button button--secondary button--hollow'
                    }
                }
            } only %}
        </div>
    </div>
{% endblock %}

{% block footer %}
    {% embed organism('footer') only %}
        {% block footerTop %}{% endblock %}
    {% endembed %}
{% endblock %}

