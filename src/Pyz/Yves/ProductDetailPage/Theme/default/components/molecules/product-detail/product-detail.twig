{% extends model('component') %}

{% define config = {
    name: 'product-detail',
    tag: 'section'
} %}

{% define data = {
    description: '',
    attributes: [],
    sku: '',
    index: null
} %}

{% block body %}
    <div class="pdp-option">
        <div class="pdp-option__title js-toggle-pdp-options" data-toggle-target=".js-pdp-option-description{% if data.index != null %}-{{ data.index }}{% endif %}">{{ 'product.attribute.description' | trans }}</div>
        <div class="pdp-option__wrapper js-pdp-option-description{% if data.index != null %}-{{ data.index }}{% endif %} is-hidden">
            {% if data.description is not empty %}
                {{ data.description }}
            {% endif %}
            <div class="pdp-option__sku">{{ 'product.attribute.sku' | trans }}: {{ data.sku }}</div>
        </div>
    </div>

    <div class="pdp-option">
        <div class="pdp-option__title js-toggle-pdp-options" data-toggle-target=".js-pdp-option-detail{% if data.index != null %}-{{ data.index }}{% endif %}">{{ 'page.product.details' | trans }}</div>
        <div class="pdp-option__wrapper grid js-pdp-option-detail{% if data.index != null %}-{{ data.index }}{% endif %} is-hidden">
            {% for name, value in data.attributes if name %}
                <div class="col col--sm-6 pdp-option__detail" itemprop="additionalProperty" itemscope itemtype="http://schema.org/PropertyValue">
                    <div class="pdp-option__detail-name" itemprop="name">{{ ('product.attribute.' ~ name) | trans }}</div>
                    <div class="pdp-option__detail-value" itemprop="value">{{ value }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
